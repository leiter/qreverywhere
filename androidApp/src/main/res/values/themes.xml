<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QrEveryWhere" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.QrEveryWhere.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/primary</item>
        <item name="itemBackground">@color/primary</item>
        <item name="itemIconTint">?attr/defaultOnSurface</item>
        <item name="itemTextColor">?attr/defaultOnSurface</item>

    </style>

    <style name="PasteHereTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_content_paste_go</item>
        <item name="endIconDrawable">@drawable/ic_clear_text_input</item>
        <item name="expandedHintEnabled">false</item>

    </style>

    <style name="ToolbarSubTitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.QrEveryWhere.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.QrEveryWhere.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>