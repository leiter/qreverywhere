<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrcodedetailview.DetailViewFragment">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detailViewAcquiredAt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxHeight="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/detailViewActionTypeTextView"
        app:layout_constraintTop_toBottomOf="@+id/createEmailQrImagePreview"
        tools:text="Scanned on 06.05.2020" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detailViewActionTypeTextView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:maxHeight="100dp"

        app:layout_constraintBottom_toBottomOf="@+id/detailViewAcquiredAt"
        app:layout_constraintEnd_toStartOf="@+id/detailViewAcquiredAt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailViewAcquiredAt"
        tools:text="Launch phone call" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detailViewContentTextView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:maxHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailViewActionTypeTextView"
        tools:text="@tools:sample/lorem/random"/>





    <Button
        android:id="@+id/createEmailCreateQrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Launch action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailViewContentTextView" />

    <ImageView
        android:id="@+id/createEmailQrImagePreview"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"

        android:src="@drawable/ic_launcher_background"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="16dp" />

    <Button
        android:id="@+id/createEmailButtonSaveQrToFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save to file"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/detailViewAcquiredAt"
        app:layout_constraintTop_toTopOf="@+id/createEmailQrImagePreview" />


</androidx.constraintlayout.widget.ConstraintLayout>